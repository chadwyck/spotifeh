@import 'nib'

main-color = #c1333f

.flat-button
    margin-top: 10px;
    margin-right: 10px;
    padding: 14px 26px;
    font-size: 26px;
    line-height: 100%;
    text-shadow: 0 1px rgba(0, 0, 0, 0.4);
    color: #fff;
    display: inline-block;
    vertical-align: middle;
    text-align: center;
    cursor: pointer;
    transition: background 0.1s ease-in-out;
    -webkit-transition: background 0.1s ease-in-out;
    -moz-transition: background 0.1s ease-in-out;
    -ms-transition: background 0.1s ease-in-out;
    -o-transition: background 0.1s ease-in-out;
    color: #fff;
    border: none;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;


.flat-button:active
    padding-top: 15px;
    margin-bottom: -1px;

.flat-button, .flat-button:hover, .flat-button:active
    outline: 0 none;
    text-decoration: none;
    color: #fff;

.flat-button-1
    height: 70px;
    width: 15%;
    margin 10px
    min-width: 125px;
    background-color: #ef634c;
    box-shadow: 0px 3px 0px 0px #ce503a;
    padding: 5px;

.flat-button-1:hover
    background-color: #eb5137;

.flat-button-1:active
    box-shadow: 0px 1px 0px 0px #ce503a;
    position relative
    top -5px
    line-height 50px
    padding-top 5px