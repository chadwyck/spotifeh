@import 'mixins'

.flat-button
    margin-top: 10px;
    margin-right: 10px;
    padding: 14px 26px;
    font-size: 20px;
    line-height: 100%;
    color: #fff;
    display: inline-block;
    vertical-align: middle;
    text-align: center;
    cursor: pointer;
    transitions(0.1s)
    border: none;
    round-corners(3px)


.flat-button:active
    padding-top: 15px;
    // margin-bottom: -1px;

.flat-button, .flat-button:hover, .flat-button:active
    outline: 0 none;
    text-decoration: none;
    color: #fff;

.flat-button-1
    height: 70px;
    width: 15%;
    margin 10px
    min-width: 125px;
    background-color: lighten(main-color, 7%)
    box-shadow: 0px 3px 0px 0px darken(main-color, 60%);
    padding: 5px;
    display block

.flat-button-1:hover
    background-color: darken(main-color, 7%);

.flat-button-1:active
    box-shadow: 0px 1px 0px 0px darken(main-color, 60%);

.flat-button-2
    height: 25px;
    width: 15%;
    margin 10px
    min-width: 125px;
    background-color: lighten(main-color, 7%)
    box-shadow: 0px 3px 0px 0px darken(main-color, 60%);
    padding: 5px;
    font-size 16px
    line-height 25px
    left 0px

.flat-button-2:hover
    background-color: darken(main-color, 7%);

.flat-button-2:active
    box-shadow: 0px 1px 0px 0px darken(main-color, 60%);
    padding-top: 5px;
    line-height 27px
