/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Montserrat|Amatic+SC')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #c1333f
main-color-light = #ff6563
background-color = #ebebeb
black = #000
white = #fff

controller-height = 50px
navbar-height = 60px

body
  font-family 'Montserrat'
  background-color background-color
  color #444

.navbar
    padding 0px 15%
    font-size 20px
    background-color black
    height navbar-height
    overflow visible
    color white
    margin-bottom 20px
    color #fff

#brand
    float left
    padding (navbar-height * 0.1)
    top 0px
    display inline
    width 100px

#brandImg
    height (navbar-height * 0.8)

a
    color main-white
    text-decoration none

.divider
    background-color white
    width 3px
    top 15px
    height 30px
    display inline
    margin 0px
    position absolute

.nav-user
    float right
    display inline
    line-height navbar-height

.nav-user > a
    margin 20px
    color white

.container
  width 500px
  margin 50px auto
  overflow hidden

.main-content
  float left
  width 300px

.sidebar
  float left
  width 200px

  .widget

    /*
     * Note the lack of vendor
     * prefixes here. Nib will
     * add them for us
     */
    border-radius 3px
    border 1px solid #ccc
    margin-left 20px
    background-color background-color
    box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

    h1
      font-family 'Montserrat'
      margin 13px 10px 4px
      padding-bottom 10px
      border-bottom 1px dotted #ddd
      border-radius 2px 2px 0px 0px
      margin-bottom 10px

    p
      font-size 13px
      padding 0px 10px
      margin-bottom 10px

p
  line-height 1.8

footer
  width 100%
  bottom 0
  padding-top 5px
  font-size 13px
  position fixed
  background-color black
  color white

.wavy
  margin 20px
  margin-left auto
  margin-right auto
  width 70%

.timeWave
  margin-left auto
  margin-right auto

.wavy-time
  display inline
  position relative
  bottom -45px

#currentTime
  right 35%

#endTime
  left 35%

.controller
  text-align center
  margin 20px
  height controller-height
  line-height controller-height

#play-pause
  height controller-height
  margin-right auto
  margin-left auto

.skips
  display inline
  position relative
  height (controller-height * 2 / 3)
  bottom (controller-height * 1 / 6)

#mute
  height (controller-height * 1 / 3)
  bottom (controller-height * 1 / 3)
  left 10%

#repeat
  left 15%
