/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Montserrat|Amatic+SC')

@import 'mixins'

album-width = 200px

global-reset()

html
  overflow-y scroll

body
  font-family 'Montserrat'
  background-color background-color
  color #444

.navbar
    padding 0px 15%
    font-size 20px
    background-color black
    height navbar-height
    overflow visible
    color white
    margin-bottom 20px
    color #fff
    z-index 1000

#brand
    float left
    padding (navbar-height * 0.1)
    top 0px
    display inline
    width 100px

#brandImg
    height (navbar-height * 0.8)

#signup
  color main-color

a
    color main-white
    text-decoration none

h1
  font-size 32px
  margin-bottom 30px

.browseCat
  margin-left 50px

.browseCat > p
  margin-bottom 15px

.divider
    background-color white
    width 3px
    top 15px
    height 30px
    display inline
    margin 0px
    position absolute

.nav-user
    // float right
    position absolute
    left 43%
    display inline
    line-height navbar-height

.nav-user > a
    margin 20px
    color white

.container
  width 100%
  max-width 1400px
  margin 50px auto
  overflow hidden

.resultsPanel
  width 90%
  max-width 1500px
  margin-left auto
  margin-right auto
  background-color result-panel
  padding 30px
  margin-bottom 12%

.albumCover
  width album-width

.container > h1
  margin-left 5%
  margin-bottom 20px
  color main-color

p
  line-height 1.8

footer
  width 100%
  bottom 0
  padding-top 5px
  font-size 13px
  position fixed
  background-color black
  color white

#play-name
  position fixed
  left 0
  width 45%
  text-align center

.wavy
  margin 20px
  margin-left auto
  margin-right auto
  width 80%

.timeWave
  margin-left auto
  margin-right auto

.wavy-time
  display inline
  position relative
  bottom -45px

#currentTime
  position fixed
  bottom 22px
  left 5%

#endTime
  position fixed
  bottom 22px
  right 5%

.controller
  text-align center
  margin 20px
  height controller-height
  line-height controller-height

#play-pause
  height controller-height
  margin-right auto
  margin-left auto

.skips
  display inline
  position relative
  height (controller-height * 2 / 3)
  bottom (controller-height * 1 / 6)

#mute
  height (controller-height * 1 / 3)
  bottom (controller-height * 1 / 3)
  left 10%

#repeat
  left 15%

.resultBold
  font-size 18px
  color black
  line-height 18px
  height 18px
  overflow hidden

.resultLame
  font-size 12px
  color lighten(black, 40%)
  line-height 12px
  height 12px
  overflow hidden

.resultBoldPlay
  margin-left 20px
  font-size 18px
  color darken(white, 20%)
  line-height 18px
  height 18px
  overflow hidden

.resultLamePlay
  margin-left 20px
  font-size 12px
  color lighten(black, 40%)
  line-height 12px
  height 12px
  overflow hidden

.resultItem
  display inline-block
  margin 20px
  width album-width
  overflow hidden
  background-color darken(result-panel, 10%)
  padding 5px
  top 0

.resultItem:hover
  background-color darken(result-panel, 30%)
  transitions(0.1s)

#uploadBtn
  margin-left 27%

.searchForm
  width 500px
  margin 0 auto

#searchInput
  background url('/images/search.svg') no-repeat 8px 6px
  background-size 16px 16px
  padding 6px 15px 6px 30px
  margin 3px
  width 40%
  border-radius 15px
  border:1px solid lighten(black, 30%)
  background-color darken(white, 10%)
  -moz-border-radius:5px; 
  -webkit-border-radius:5px;
  color darken(white, 60%)

input
  padding 6px 15px 6px 15px
  width 90%
  margin 3px
  border-radius 15px
  border:1px solid lighten(black, 30%)
  background-color darken(white, 10%)
  -moz-border-radius:5px; 
  -webkit-border-radius:5px;
  color darken(white, 60%)

#clear
  visibility false

input:focus {
    outline:none;
}

.landingGroup
  width 100%
  height 100%
  text-align center
  padding-top 50px
  padding-bottom 50px

#landingReel
  -webkit-animation-name:             rotate; 
  -webkit-animation-duration:         5.0s; 
  -webkit-animation-iteration-count:  infinite;
  -webkit-animation-timing-function: linear;

@-webkit-keyframes rotate {
  from {
    -webkit-transform: rotate(0deg);
  }
  to { 
    -webkit-transform: rotate(360deg);
  }
}