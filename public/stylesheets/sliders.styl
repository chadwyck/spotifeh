@import 'mixins'

.sliderPane
   top: 0px;
   right: 0px;
   width: 22%;
   height: (85% + 60px);
   background-color: main-panel;
   position: fixed;
   z-index: 0;
   display: none;
   padding-left 50px
   padding-top 110px
   color #fff

   form
      margin-top 30%

      #uploadFile
        display inline
        font-size 10px

#playlistPane
  left: 0px;

#inputUpload
     opacity 0
     cursor pointer
     position absolute
     top -50px

.sliderToggle
    height: 3em;
    width: 3em;
    padding: 0.1em;
    background-color: red;
    position: fixed;
    top: 30%;
    z-index: 10;
    cursor: pointer;
    text-align: center;

#pictureSlider
    right: 0;
    transitions(0.1s)
    background-color: main-color
    box-shadow: 0px 3px 0px 0px darken(main-color, 50%)

#sliderImg, #sliderImg2
  width 1.5em
  margin-left auto
  margin-right auto
  top 12px
  position relative

#pictureSlider:hover, #playlistSlider:hover
  background-color: darken(main-color,7%)

#pictureSlider:active, #playlistSlider:active
  background-color: darken(main-color,15%)

#playlistSlider
    left: 0;
    transitions(0.1s)
    background-color: main-color
    box-shadow: 0px 3px 0px 0px darken(main-color, 50%)