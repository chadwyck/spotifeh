/*
 * Import nib
 */
@import 'nib'

main-color = #c1333f
main-color-light = #ff6563
main-panel = #131313



.sliderPane {
   top: 60px;
   right: 0px;
   width: 25%;
   height: 85%;
   background-color: main-panel;
   position: absolute;
   z-index: 0;
   display: none;
   padding-left 50px
   padding-top 50px
   color #fff
}

.sliderToggle {
    height: 3em;
    width: 3em;
    padding: 0.1em;
    background-color: red;
    position: absolute;
    top: 30%;
    z-index: 10;
    cursor: pointer;
    text-align: center;
}

#pictureSlider {
    right: 0;
    // background: url('/images/slider.svg') no-repeat center;
    // background-size: 50%;
    // border-radius: 0 0 0 0.5em;
    /*box-shadow: -0.2em 0.2em 0.75em;*/
    background-color: main-color
    box-shadow: 0px 3px 0px 0px darken(main-color, 50%);
}

#sliderImg
  width 1.5em
  margin-left auto
  margin-right auto
  top 12px
  position relative

#pictureSlider:hover {
  background-color: lighten(main-color,10%)
}

#pictureSlider:active {
  background-color: darken(main-color,5%);
}
