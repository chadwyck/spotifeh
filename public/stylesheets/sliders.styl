@import 'mixins'

.sliderPane
   top: 60px;
   right: 0px;
   width: 25%;
   height: 85%;
   background-color: main-panel;
   position: fixed;
   z-index: 0;
   display: none;
   padding-left 50px
   padding-top 50px
   color #fff

.sliderToggle
    height: 3em;
    width: 3em;
    padding: 0.1em;
    background-color: red;
    position: fixed;
    top: 30%;
    z-index: 10;
    cursor: pointer;
    text-align: center;

#pictureSlider
    right: 0;
    transitions(0.1s)
    background-color: main-color
    box-shadow: 0px 3px 0px 0px darken(main-color, 50%)

#sliderImg
  width 1.5em
  margin-left auto
  margin-right auto
  top 12px
  position relative

#pictureSlider:hover
  background-color: darken(main-color,7%)

#pictureSlider:active
  background-color: darken(main-color,15%)
